<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"            
             x:Class="ClienteXna.View.Cliente"
             Title="Cadastro Cliente">
  
  <ContentPage.Content>
    <Grid>
      <StackLayout VerticalOptions="Center">
        <Entry Text="{Binding TxtNome}" Placeholder="informe o Nome" />
        <Entry Text="{Binding TxtCidade}" Placeholder="informe a cidade" />
      </StackLayout>
    </Grid>
  </ContentPage.Content>

  <ContentPage.ToolbarItems>
    <ToolbarItem Name="SALVAR" Command="{Binding SalvarCommand}" Icon="#E105" />
  </ContentPage.ToolbarItems>
  
</ContentPage>